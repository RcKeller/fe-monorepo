{
  "extends": "./tsconfig.build.json",
  "include": [
    "packages", 
    "scripts",
    "app",
    "storybook"
  ],
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@rckeller/example-sdk": ["packages/sdk/src"],
      "@rckeller/example-react-lib": ["packages/react/src"],
      "@rckeller/example-script": ["packages/script/src"]
    }
  }
}